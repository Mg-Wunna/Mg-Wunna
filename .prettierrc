{
  "singleQuote": true,
  "tabWidth": 2,
  "lineWidth": 80,
  "singleAttributePerLine": true,
  "trailingComma": "es5",
  "semi": true,
  "quoteProps": "as-needed",
  "arrowParens": "always",
  "endOfLine": "auto",
  "bracketSpacing": true,
  "plugins": [
    "prettier-plugin-organize-imports",
    "prettier-plugin-tailwindcss"
  ],
  "importOrder": ["^[./]", "^@/components/(.*)$", "^@/app/(.*)$"],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
